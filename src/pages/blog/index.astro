---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
// @ts-ignore - types generated by `astro sync` (run after install)
// @ts-ignore: next line will import types generated by Astro
import { getCollection } from 'astro:content';

const posts = await getCollection('blog') as any[];
const sorted = posts.sort((a: any, b: any) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---
<BaseLayout title="Blog - ATRA y Obesidad Salamanca" description="Artículos y recursos sobre TCA, acompañamiento y recursos locales." canonical="https://atrayobesidad.com/blog">
  <Header slot="header" />

  <section class="max-w-5xl mx-auto px-4 py-12">
    <h1 class="text-2xl font-bold">Blog</h1>
    <div class="mt-6 grid grid-cols-1 md:grid-cols-2 gap-6">
      {sorted.map((post: any) => (
        <article class="bg-white rounded shadow p-4" data-slug={post.slug}>
          <a href={`/blog/${post.slug}`} class="text-lg font-semibold text-blue-700">{post.data.title}</a>
          <p class="text-sm text-gray-500">{new Date(post.data.date).toLocaleDateString('es-ES')}</p>
          <p class="mt-2 text-gray-700">{post.data.description}</p>
        </article>
      ))}
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>